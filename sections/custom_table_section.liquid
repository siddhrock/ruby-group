<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="cstm_table_wr section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="cstm_table_main global-border-radius" style="background-color: {{ section.settings.bg_color }};">
      {% if section.settings.cstm_table_head != blank %}
        <h2 class="large-title">{{ section.settings.cstm_table_head }}</h2>
      {% endif %}
      <div class="cstm_table_single">
        {% for block in section.blocks %}
          <div class="cstm_table_text" {{ block.shopify_attributes }}>
              <div class="text_single">
                {% if block.settings.cstm_tables_text1 != blank %}
                  {{ block.settings.cstm_tables_text1 }}
                {%- endif %}
              </div>
            <div class="text_single">
                {% if block.settings.cstm_tables_text2 != blank %}
                  {{ block.settings.cstm_tables_text2 }}
                {%- endif %}
              </div>
            <div class="text_single">
                {% if block.settings.cstm_tables_text3 != blank %}
                  {{ block.settings.cstm_tables_text3 }}
                {%- endif %}
              </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Table",
  "class": "cstm_cstm_table",
  "settings": [
    {
      "id": "bg_color",
      "type": "color",
      "label": "Background color"
    },
    {
      "id": "cstm_table_head",
      "type": "text",
      "label": "Main Heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "cstm_tables_row",
      "name": "Table Row",
      "settings": [
        {
          "id": "cstm_tables_text1",
          "type": "richtext",
          "label": "Content 1"
        },
        {
          "id": "cstm_tables_text2",
          "type": "richtext",
          "label": "Content 2"
        },
        {
          "id": "cstm_tables_text3",
          "type": "richtext",
          "label": "Content 3"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Table"
    }
  ]
}
{% endschema %}
